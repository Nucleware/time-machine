{
    "name": "nucleware/time-machine",
    "type": "library",
    "description": "Time-based state-machine",
    "keywords": [
        "time",
        "state machine"
    ],
    "license": "MIT",
    "require": {
        "php": "^7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "vimeo/psalm": "^3.0",
        "phpstan/phpstan": "^0.11.2"
    },
    "autoload": {
        "psr-4": {
            "Nucleware\\TimeMachine\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nucleware\\TimeMachine\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "phpstan": "vendor/bin/phpstan analyse -l 7 src/ tests/",
        "psalm": "vendor/bin/psalm"
    }
}
